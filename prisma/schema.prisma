generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ğŸ‘¤ USER NEXTAUTH COMPATIBLE
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // uniquement si login via formulaire
  image         String?
  linkingAuthorizedAt   DateTime? // ğŸ†• Nouveau champ
  watchedTutorial Boolean @default(false) // ğŸ†• Nouveau champ pour le tutoriel
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // ğŸ” NEXTAUTH RELATIONS
  accounts      Account[]
  sessions      Session[]
  
  // ğŸ“ NOS DONNÃ‰ES MÃ‰TIER
  todos         Todo[]
  historyTodos  HistoryTodo[] // Todos archivÃ©s
  categories    Category[]
  weekTypes     WeekType[] // ğŸ†• Semaines types

  @@map("users")
}

// ğŸ” TABLES NEXTAUTH OBLIGATOIRES
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// ğŸ“ NOS MODÃˆLES MÃ‰TIER
model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    Priority  @default(NORMAL)
  type        TodoType  @default(PERSONAL) // ğŸ†• ENUM POUR UPGRADE
  
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dueDate     DateTime?
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("todos")
}

model Category {
  id        String       @id @default(cuid())
  name      String
  color     String       // Obligatoire !
  emoji     String?
  type      CategoryType @default(PERSONAL) // ğŸ†• ENUM POUR UPGRADE
  
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  todos     Todo[]
  historyTodos HistoryTodo[] // Relation avec les todos archivÃ©s
  weekTypeTodos WeekTypeTodo[] // ğŸ†• Relation avec les todos des semaines types
  
  createdAt DateTime     @default(now())
  
  @@unique([userId, name])
  @@map("categories")
}

// ğŸ¯ ENUMS POUR UPGRADE FUTUR
enum TodoType {
  PERSONAL  // ğŸ“ Todo personnel (actuel)
  SHARED    // ğŸ‘¥ Todo partagÃ© (futur)
}

enum CategoryType {
  PERSONAL  // ğŸ¨ CatÃ©gorie personnelle (actuel)  
  SHARED    // ğŸ‘¥ CatÃ©gorie partagÃ©e (futur)
}

enum Priority {
  LOW
  NORMAL
  HIGH
}

model HistoryTodo {
  id          String    @id @default(cuid())
  title       String    // ğŸ” ChiffrÃ© cÃ´tÃ© application
  description String?   // ğŸ” ChiffrÃ© cÃ´tÃ© application
  completed   Boolean   @default(false)
  priority    Priority  @default(NORMAL)
  type        TodoType  @default(PERSONAL)
  
  // ğŸ†• DonnÃ©es de catÃ©gorie intÃ©grÃ©es pour prÃ©server l'historique
  categoryName String?  // Nom de la catÃ©gorie au moment de l'archivage
  categoryColor String? // Couleur de la catÃ©gorie au moment de l'archivage
  categoryEmoji String? // Emoji de la catÃ©gorie au moment de l'archivage
  
  // Relation optionnelle avec la catÃ©gorie (peut Ãªtre null si supprimÃ©e)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dueDate     DateTime?
  archivedAt  DateTime  @default(now()) // Date d'archivage
  weekKey     String    // ClÃ© de la semaine (YYYY-MM-DD du lundi)
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("history_todos")
}

// ğŸ†• MODÃˆLE POUR LES SEMAINES TYPES
model WeekType {
  id          String    @id @default(cuid())
  name        String    // Nom de la semaine type
  description String?   // Description optionnelle
  isDefault   Boolean   @default(false) // Semaine type par dÃ©faut
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  todos       WeekTypeTodo[] // Todos de la semaine type
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([userId, name])
  @@map("week_types")
}

// ğŸ†• MODÃˆLE POUR LES TODOS DES SEMAINES TYPES
model WeekTypeTodo {
  id          String    @id @default(cuid())
  title       String    // ğŸ” ChiffrÃ© cÃ´tÃ© application
  description String?   // ğŸ” ChiffrÃ© cÃ´tÃ© application
  completed   Boolean   @default(false) // (optionnel, si tu veux gÃ©rer l'Ã©tat dans le template)
  priority    Priority  @default(NORMAL)
  type        TodoType  @default(PERSONAL)

  // CatÃ©gorie (rÃ©fÃ©rence)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  // Heure de la tÃ¢che (optionnelle)
  dueDate     DateTime?

  // Jour de la semaine (0=Dimanche, 1=Lundi, ..., 6=Samedi)
  dayOfWeek   Int

  weekTypeId  String
  weekType    WeekType  @relation(fields: [weekTypeId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("week_type_todos")
} 